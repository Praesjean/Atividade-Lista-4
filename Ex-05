#Ler 10 números e imprimir quantos são pares e quantos são ímpares.
par = 0
impar = 0

for i in range(10):
    numero = int(input("Digite um número: "))
    if numero % 2 == 0:
        par += 1
    else:
        impar += 1

print(f"Quantidade de números pares:  {par}")
print(f"Quantidade de números ímpares:  {impar}")
